<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <title>Technology Blog</title>
  </head>
  <body class="bg-secondary">
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand fw-bold text-light" href="/">Technology Blog</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        </div>
        <div class="collapse navbar-collapse mx-2" id="navbarNav">
          <ul class="navbar-nav ">
            <li class="nav-item d-flex align-items-center">
              <a class="nav-link active text-light" aria-current="page" href="/">Home</a>
            </li>
            {{#if loggedIn}}
            <li class="nav-item text-center d-flex align-items-center">
              <a class="nav-link active text-light" href="/dashboard">Dashboard ({{username}})</a>
            </li>
            
            <li class="nav-item d-flex align-items-center">
              <a class="nav-link active text-light" id="logout" href="/">Logout </a>
            </li>
            {{else}}
            <li class="nav-item">
              <a class="nav-link active text-light" href="/home/login">Login</a>
            </li>
            {{/if}}
            
          </ul>
        </div>
      </div>
    </nav>
    {{{body}}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    {{#if loggedIn}}
    <script src="/JS/logout.js"></script>
    {{/if}}
  </body>
</html>